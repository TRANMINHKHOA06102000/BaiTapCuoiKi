@model TranMinhKhoa_TestUngDung.Areas.Admin.Models.LoginModels
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">

    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="ThemeBucket">
    <link rel="shortcut icon" href="~/Assets/images/favicon.png">

    <title>Trang đăng nhập</title>

    <!--Core CSS ~/Assets/-->
    <link href="~/Assets/bs3/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/Assets/css/bootstrap-reset.css" rel="stylesheet">
    <link href="~/Assets/font-awesome/css/font-awesome.css" rel="stylesheet" />
    <link href="~/Assets/css/style.css" rel="stylesheet">
    <link href="~/Assets/css/style-responsive.css" rel="stylesheet" />
    <style>
        .message {
            margin-bottom: 0;
        }

            .message > ul {
                list-style: none;
                text-align: center;
                padding: 0;
            }

                .message > ul > li {
                    width: 100%;
                    font-weight: bold;
                    font-size: 15px;
                }

        .container {
            background-color: #191932;
        }

        .login-body {
            background: #191932;
        }
    </style>
</head>

<body class="login-body">

    <div class="container">
        <div class="form-signin">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, null, new { @class = "alert alert-danger message" })
                <h2 style="font-weight:bold" class="form-signin-heading">Trang đăng nhập</h2>
                <div class="login-wrap">
                    <div class="user-login-info">
                        @Html.TextBoxFor(model => model.UserName, new { @class = "form-control", 
                                                                @placeholder = "Mời nhập tên đăng nhập", @autofocus = "autofocus" })
                        @Html.TextBoxFor(model => model.Password, new { @class = "form-control", 
                                                                @placeholder = "Mời nhập mật khẩu", @autofocus = "autofocus" })
                    </div>
                    <label class="checkbox">
                        <input type="checkbox" value="remember-me"> Nhớ mật khấu
                        <span class="pull-right">
                            <a data-toggle="modal" href="#myModal"> Quên mật khẩu?</a>
                        </span>
                    </label>
                    <button class="btn btn-lg btn-login btn-block" type="submit">Đăng nhập</button>
                    <div class="registration">
                        Bạn chưa có tài khoản?
                        <a class="" href="registration.html">
                            Tạo tài khoản mới
                        </a>
                    </div>
                </div>
                <div aria-hidden="true" aria-labelledby="myModalLabel" role="dialog" tabindex="-1" id="myModal" class="modal fade">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                                <h4 class="modal-title">Quên mật khẩu ?</h4>
                            </div>
                            <div class="modal-body">
                                <p>Nhập địa chỉ email bạn sử dụng để đưa mật khẩu về mặc định</p>
                                <input type="text" name="email" placeholder="Email" autocomplete="off" class="form-control placeholder-no-fix">
                            </div>
                            <div class="modal-footer">
                                <button data-dismiss="modal" class="btn btn-default" type="button">Cancel</button>
                                <button class="btn btn-success" type="button">Submit</button>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
    <!--Core js-->
    <script src="~/Assets/js/jquery.js"></script>
    <script src="~/Assets/bs3/js/bootstrap.min.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
</body>
</html>

